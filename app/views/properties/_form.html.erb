<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex">
    <div class="flex-1 mb-6">
      <%= form.label :name, class: "label" %>
      <%= form.text_field :name, class: "input" %>
    </div>

    <div class="flex-1 mb-6">
      <%= form.label :street_address, class: "label" %>
      <%= form.text_field :street_address, class: "input" %>
    </div>
  </div>

  <div class="flex">
    <div class="w-3/12 mb-6">
      <%= form.label :city, class: "label" %>
      <%= form.text_field :city, class: "input" %>
    </div>

    <div class="w-1/12 mb-6">
      <%= form.label :state, class: "label" %>
      <%= form.text_field :state, class: "input" %>
    </div>

    <div class="w-2/12 mb-6">
      <%= form.label :zipcode, class: "label" %>
      <%= form.number_field :zipcode, class: "input" %>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :unit_count, class: "label" %>
    <%= form.number_field :unit_count, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :year_built, class: "label" %>
    <%= form.number_field :year_built, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :status, class: "label" %>
    <%= form.text_field :status, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :asking_price, class: "label" %>
    <%= form.text_field :asking_price, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :purchase_price, class: "label" %>
    <%= form.text_field :purchase_price, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :ae_flood_zone, class: "label" %>
    <%= form.check_box :ae_flood_zone, class: "checkbox" %>
  </div>

  <div class="mb-6">
    <%= form.label :notes, class: "label" %>
    <%= form.text_area :notes, class: "input" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-default" %>
  </div>
<% end %>
