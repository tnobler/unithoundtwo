<p id="notice"><%= notice %></p>


<div class="max-w-4xl px-10 pt-10 pb-24 mx-auto mt-10 bg-white border rounded shadow-lg">
  <div class="flex flex-wrap items-center justify-between">
    <h1 class="mb-4 text-4xl font-bold">
      <%= @property.name %>
    </h1>
  </div>

  <div class="text-lg font-light leading-relaxed text-gray-600">
    <p class="font-bold text-gray-900"><%= @property.street_address %></p>
    <p class="font-bold text-gray-900"><%= @property.city %>, <%= @property.state %> <%= @property.zipcode %></p>
  </div>

  <h3 class="pb-3 my-6 text-2xl font-bold border-b">Units</h3>

  <%= render "units/cards", unit: @unit %>
</div>




<%= link_to 'Edit', edit_property_path(@property) %> |
