<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :name, class: "label" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :base_unit, "Unit of Measure", class: "label" %>
    <%= form.text_field :base_unit, placeholder: "Box, each, dozen, package...", class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :price, class: "label" %>
    <%= form.text_field :price, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :vendor, class: "label" %>
    <%= form.text_field :vendor, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: "label" %>
    <%= form.text_area :description, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :category_id, class: "label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, class: "mb-6" %>
  </div>


  <div class="actions mb-6">
    <%= form.submit class: "btn btn-default" %>
  </div>
<% end %>
