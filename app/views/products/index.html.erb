<p id="notice"><%= notice %></p>

<h1 class="mb-6 text-3xl font-bold">Products</h1>




<div class="grid grid-cols-12 gap-6 mb-10">
  <% @products.each do |product| %>
    <div class="col-span-12 p-6 border rounded shadow lg:col-span-3">
      <%= link_to product, class: "block" do %>
        <h3 class="text-lg font-bold"><%= product.name %></h3>
        <p class="mb-1 leading-snug text-gray-600"><%= product.base_unit %></p>
        <p class="mb-1 leading-snug text-gray-600"><%= product.description %></p>
        <p class="mb-1 leading-snug text-gray-600"><%= product.category.name %></p>
        <p class="leading-snug text-gray-600"><%= number_to_currency(product.price) %></p>
        <p class="leading-snug text-gray-600">Sold by: <%= product.vendor %></p>
        
      <% end %>
    </div>
  <% end %>
</div>



<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-default" %>
