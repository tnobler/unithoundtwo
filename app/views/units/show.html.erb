<p id="notice"><%= notice %></p>

<p class="font-bold text-gray-900"><%= @property.name %></p>
<div class="max-w-4xl px-10 pt-10 pb-24 mx-auto mt-10 bg-white border rounded shadow-lg">
    <div class="flex flex-wrap items-center justify-between">
      <h1 class="mb-4 text-4xl font-bold">
        Unit <%= @unit.number %>
      </h1>
    </div>
    <div class="text-lg font-light leading-relaxed text-gray-600">
      <p class="font-bold text-gray-900"><%= @unit.sqft %> SQFT</p>
      <p class="font-bold text-gray-900"><%= @unit.beds %> Beds/<%= @unit.baths %> Baths</p>
      <p class="font-bold text-gray-900">Floor Plan: <%= @unit.floor_plan %></p>
      
    </div>

  <h3 class="pb-3 my-6 text-2xl font-bold border-b">Budget</h3>

  <%= render "budget_items/form", budget_item: @budget_item %>

  <ul class="mb-6 leading-relaxed">
    <% @unit.budget_items.each do |item| %>
      <%= check_box_tag "complete", item.complete %>
      <%#= item.product %>
      <%= item.qty %>
    <% end %>
  </ul>

</div>


<p>
  <strong>Number:</strong>
  <%= @unit.number %>
</p>

<p>
  <strong>Sqft:</strong>
  <%= @unit.sqft %>
</p>

<p>
  <strong>Beds:</strong>
  <%= @unit.beds %>
</p>

<p>
  <strong>Baths:</strong>
  <%= @unit.baths %>
</p>

<p>
  <strong>Floor plan:</strong>
  <%= @unit.floor_plan %>
</p>

<p>
  <strong>Property:</strong>
  <%= @unit.property_id %>
</p>

<%#= link_to 'Edit', edit_unit_path(@unit) %> |
<%#= link_to 'Back', units_path %>
