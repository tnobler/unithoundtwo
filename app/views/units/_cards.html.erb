<div class="grid grid-cols-12 gap-6 mb-10">
    <% @property.units.each do |unit| %>
      <div class="col-span-12 p-6 border rounded shadow lg:col-span-3">
        <%= link_to property_unit_url(:property_id => @property.id, :id => unit.id), class: "block" do %>
          <h3 class="text-lg font-bold"><%= unit.number %></h3>
          <p class="leading-snug text-gray-600"><%= unit.sqft %> Sqft </p>
          <p class="mb-1 leading-snug text-gray-600"><%= unit.beds %> Beds</p>
          <p class="mb-1 leading-snug text-gray-600"><%= unit.baths %> Baths</p>
          <p class="mb-1 leading-snug text-gray-600">Floor Plan: <%= unit.floor_plan %></p>
        <% end %>
      </div>
    <% end %>
  </div>

<br>
<div class="my-4">
  <%= link_to 'New Unit', new_property_unit_url(:property_id => @property.id), class: "btn btn-default" %>
</div>